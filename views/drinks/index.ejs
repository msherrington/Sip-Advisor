<h1><img src="../assets/images/marker.png">Sip<span>Advisor</span></h1>
<h3>Drip-Feed</h3>
<br>
<div class="row">
  <% drinks.forEach((drink) => { %>
    <div class="small-12 medium-6 large-4 columns">
      <img class="thumbnail" src="<%= drink.imageSRC %>" alt="<%= drink.name %>">
      <a href="/drinks/<%= drink.id %>"><h3><%= drink.name %></h3></a>

      <p>Posted by <%= drink.createdBy.username %></p>

    </div>
  <% }) %>
</div>
